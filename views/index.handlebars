<h1>Eat the Burger!</h1>
<img src="/assets/img/burger.png">
<h2>Burgers Ready to Eat!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
    <li>
        {{burger_name}}
        <button class= "change-devour" data-id="{{id}}" data-newdevour= "1"> Eat Burger!</button>
      </li>
      
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers Devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
     <li>
        {{burger_name}}
    </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger: </h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Eaten?</label><br>
    <input type="radio" name="devoured" value="1" checked> Eaten!<br>
    <input type="radio" name="devoured" value="0"> Uneaten
  </div>

  <button type="submit">Add Burger</button>
</form>
